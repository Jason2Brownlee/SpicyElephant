<% title "Recommend Deck" %>

<h3><span>Recommend Deck To Friend</span></h3>

<p class="intro_text">
Recommend the deck <%= link_to @deck.name, @deck %> to a friend.
</p>
<br/>

<p><%=error_messages_for "recommend" %></p>

<p>Please enter your friends details:</p>
<br/>
<% form_tag recommend_path(@deck) do %>
<table border="0" cellpadding="0" cellspacing="0">

	
	<tr valign="top">
		<td>Friend Name:</td>
		<td><%= text_field("recommend", "name") %></td>
	</tr>
	<tr valign="top">
		<td>Friend Email:</td>
		<td><%= text_field("recommend", "email_address") %></td>
	</tr>
	<tr valign="top">
		<td>Personal Message:</td>
		<td><%= text_area("recommend", "message", :rows => "5") %></td>
	</tr>
	<tr valign="top">
		<td><%= submit_tag "Send Message" %></td>
		<td></td>
	</tr>
</table>

<%end%>