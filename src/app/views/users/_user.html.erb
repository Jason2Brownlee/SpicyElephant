<%
	style = "style='background:gold;'" if user.has_subscribed_role?
%>
<tr <%= style %> >
  <td><%=h user.login %></td>
  <td><%=h user.email %></td>
  <td><%= "Premium" if user.has_subscribed_role? %></td>
  <td><%= user.enabled ? 'yes' : 'no' %>
    <% unless user == current_user %>
      <% if user.enabled %>
        (<%= link_to('disable', user_path(user.id), :method => :delete) %>)
      <% else %>
        (<%= link_to('enable', enable_user_path(user.id), :method => :put) %>)
      <% end %>
    <% end %>
  </td>
  <td><%= link_to 'edit roles', user_roles_path(user) %></td>
</tr>
