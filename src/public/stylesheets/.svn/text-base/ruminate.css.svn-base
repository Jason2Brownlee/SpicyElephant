/* Training */
.flashcard {
    text-indent: 10px;
    font-weight: bold;
    width: 600px;
    margin: 20px auto 0;
    cursor: pointer;
    background: url(../images/card_shadow.gif) bottom center no-repeat;
    padding-bottom: 9px;
    position: relative;
}

.question_text {
    margin: 0 auto;
    padding: 10px 5px;
    background: #f8f8f8;
    border-bottom: 1px solid #ddd;
    border-top: 1px solid #eee;
    color: #666;
    font-size: 150%;
    width: 590px;
    text-align: center;
}

.result_flash span {
    font-size: 120%;
    text-align: center; 
    position: absolute;
    bottom: 7px;
    left: 1px;
    width: 496px;
    height: 65px;
    line-height: 65px;
    font-weight: 100;
    color: #999;
    padding: 0 50px;
    text-align: center;
    background: #f8f8f8;
}

.answer_text {
    color: #666;
    font-size: 150%;
    font-weight: 100;
    text-align: center;
    margin: 5px 0;
}

.flipcard {
    background: url(/images/flip.gif) no-repeat center center;
    padding-top: 100px;
    text-align: center;
    color:#ccc;
}

.deck_name {
    vertical-align: bottom;
    font-size: 81%;
    font-weight: lighter;
    font-style: normal;
    position: absolute;
    bottom: 12px;
    left: 0;
    color: #888;
}

.submit_buttons, .answer_text {
    display: none;
}
.cardWrapper_outer {
    border: 1px solid #eee;
    width: 598px;
    border-bottom: none;
    margin-bottom: 0;
    min-height: 300px;
}

.cardWrapper_inner {
    border: 7px solid #f8f8f8;
    margin-bottom: 0;
    padding: 20px 0 60px;
    height: 300px;
    width: 600px;
    display: table-cell;
    vertical-align: middle;
}
#submit_buttons {
    text-align: center;
    color: #999;
    font-size: 92%;
    width: 495px;
    background: #f8f8f8;
}
.buttons_panel, #submit_buttons {
    position: absolute;
    bottom: 7px;
    left: 1px;
    width: 495px;
    padding: 0 50px;
    text-align: center;
    background: #f8f8f8;
}
#Perfect, #Good, #Pass, #Fail, #Bad, #Unknown {
    background: #f8f8f8;
    margin: 7px 5px 5px;
    border: 1px solid #eee;
    height: 50px;
    width: 70px;
    float: left;
    display: block;
    cursor: pointer;
    font-size: 85%;
    color: #999;
    padding: 30px 0 0;
    background-position: center 5px;
    background-repeat: no-repeat;
}
#Perfect { background-image: url(../images/button_1.png); }
#Good { background-image: url(../images/button_2.png); }
#Pass { background-image: url(../images/button_3.png); }
#Fail { background-image: url(../images/button_4.png); }
#Bad { background-image: url(../images/button_5.png); }
#Unknown { background-image: url(../images/button_6.png); }



